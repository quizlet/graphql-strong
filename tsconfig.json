{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "alwaysStrict": true,
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["es6", "dom", "esnext"],
    "module": "commonjs",
    "newLine": "LF",
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "outDir": "build",
    "rootDir": "src",
    "strict": true,
    "strictNullChecks": true,
    "target": "es6",
  },
  "exclude": [
    "node_modules",
    "**/__tests__/*.ts",
    "**/__tests__/*/*.ts"
  ]
}
